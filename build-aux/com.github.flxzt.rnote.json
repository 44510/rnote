{
    "app-id": "com.github.flxzt.rnote",
    "tags": [
        "development"
    ],
    "runtime": "org.gnome.Platform",
    "runtime-version": "41",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "rnote",
    "finish-args": [
        "--socket=wayland",
        "--socket=fallback-x11",
        "--device=dri",
        "--share=ipc",
        "--filesystem=home",
        "--env=RUST_BACKTRACE=1",
        "--env=RUST_LOG=rnote=warning",
        "--env=G_MESSAGES_DEBUG=none",
        "--env=GDK_DEBUG=vulkan-disable"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "build-args": [
            "--share=network"
        ],
        "test-args": [
            "--socket=x11",
            "--share=network"
        ]
    },
    "modules": [
        {
            "name": "libsass",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/lazka/libsass.git",
                    "branch": "meson"
                }
            ]
        },
        {
            "name": "sassc",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/lazka/sassc.git",
                    "branch": "meson"
                }
            ]
        },
        {
            "name": "libadwaita",
            "buildsystem": "meson",
            "builddir": true,
            "config-opts": [
                "-Dexamples=false"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libadwaita.git",
                    "branch": "main"
                }
            ]
        },
        {
            "name": "rnote",
            "buildsystem": "meson",
            "run-tests": true,
            "config-opts": [
                "-Dprofile=default"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "../"
                }
            ]
        }
    ]
}
