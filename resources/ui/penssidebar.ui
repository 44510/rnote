<?xml version="1.0" encoding="UTF-8"?>
<!-- Sidebar -->
<interface>
  <template class="PensSideBar" parent="GtkWidget">
    <property name="layout-manager">
      <object class="GtkBinLayout" />
    </property>
    <child>
      <object class="GtkStack" id="sidebar_stack">
        <property name="transition_duration">300</property>
        <property name="transition_type">GTK_STACK_TRANSITION_TYPE_SLIDE_LEFT_RIGHT</property>

        <!-- Marker Page -->
        <child>
          <object class="GtkStackPage" id="marker_stackpage">
            <property name="name">marker_page</property>
            <property name="title">Marker</property>
            <property name="child">
              <object class="GtkGrid" id="marker_grid">
                <property name="width_request">48</property>
                <property name="column_homogeneous">true</property>
                <property name="hexpand">false</property>
                <property name="vexpand">false</property>
                <property name="row_spacing">6</property>
                <property name="column_spacing">6</property>
                <property name="margin_top">6</property>
                <property name="margin_bottom">6</property>
                <property name="margin_start">6</property>
                <property name="margin_end">6</property>
                <child>
                  <object class="GtkImage">
                    <property name="margin_top">6</property>
                    <property name="margin_bottom">6</property>
                    <property name="icon_name">marker-symbolic</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">0</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkSeparator">
                    <property name="orientation">vertical</property>
                    <property name="margin_top">0</property>
                    <property name="margin_bottom">20</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">1</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="marker_widthreset">
                    <layout>
                      <property name="column">0</property>
                      <property name="row">2</property>
                    </layout>
                    <property name="icon_name">reset-pen-symbolic</property>
                    <property name="tooltip_text">reset marker width</property>
                  </object>
                </child>
                <child>
                  <object class="GtkAdjustment" id="marker_widthscale_adj">
                    <property name="step-increment">1</property>
                  </object>
                  <object class="GtkSpinButton" id="marker_spinbutton">
                    <layout>
                      <property name="column">0</property>
                      <property name="row">3</property>
                    </layout>
                    <property name="adjustment">marker_widthscale_adj</property>
                    <property name="orientation">vertical</property>
                  </object>
                </child>
                <child>
                  <object class="GtkSeparator">
                    <property name="orientation">vertical</property>
                    <property name="margin_top">20</property>
                    <property name="margin_bottom">20</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">4</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="ColorPicker" id="marker_colorpicker">
                    <property name="height_request">400</property>
                    <property name="amount-colorbuttons">8</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">5</property>
                    </layout>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>

        <!-- Brush Page -->
        <child>
          <object class="GtkStackPage" id="brush_stackpage">
            <property name="name">brush_page</property>
            <property name="title">Brush</property>
            <property name="child">
              <object class="GtkGrid" id="brush_grid">
                <property name="width_request">48</property>
                <property name="column_homogeneous">true</property>
                <property name="hexpand">false</property>
                <property name="vexpand">false</property>
                <property name="row_spacing">6</property>
                <property name="column_spacing">6</property>
                <property name="margin_top">6</property>
                <property name="margin_bottom">6</property>
                <property name="margin_start">6</property>
                <property name="margin_end">6</property>
                <child>
                  <object class="GtkImage">
                    <property name="margin_top">6</property>
                    <property name="margin_bottom">6</property>
                    <property name="icon_name">brush-symbolic</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">0</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkSeparator">
                    <property name="orientation">vertical</property>
                    <property name="margin_top">0</property>
                    <property name="margin_bottom">20</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">1</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="brush_widthreset">
                    <layout>
                      <property name="column">0</property>
                      <property name="row">2</property>
                    </layout>
                    <property name="icon_name">reset-pen-symbolic</property>
                    <property name="tooltip_text">reset brush width</property>
                  </object>
                </child>
                <child>
                  <object class="GtkAdjustment" id="brush_widthscale_adj">
                    <property name="step-increment">1</property>
                  </object>
                  <object class="GtkSpinButton" id="brush_spinbutton">
                    <layout>
                      <property name="column">0</property>
                      <property name="row">3</property>
                    </layout>
                    <property name="adjustment">brush_widthscale_adj</property>
                    <property name="orientation">vertical</property>
                  </object>
                </child>
                <child>
                  <object class="GtkSeparator">
                    <property name="orientation">vertical</property>
                    <property name="margin_top">20</property>
                    <property name="margin_bottom">20</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">4</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="ColorPicker" id="brush_colorpicker">
                    <property name="height_request">400</property>
                    <property name="amount-colorbuttons">8</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">5</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkSeparator">
                    <property name="orientation">vertical</property>
                    <property name="margin_top">20</property>
                    <property name="margin_bottom">0</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">6</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkImage">
                    <property name="margin_top">6</property>
                    <property name="margin_bottom">6</property>
                    <property name="icon_name">brush-templates-symbolic</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">7</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="TemplateChooser" id="brush_templatechooser">
                    <layout>
                      <property name="column">0</property>
                      <property name="row">8</property>
                    </layout>
                    <property name="margin_top">0</property>
                    <property name="margin_bottom">6</property>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>

        <!-- Eraser Page -->
        <child>
          <object class="GtkStackPage" id="eraser_stackpage">
            <property name="name">eraser_page</property>
            <property name="title">Eraser</property>
            <property name="child">
              <object class="GtkGrid" id="eraser_grid">
                <property name="orientation">vertical</property>
                <property name="width_request">48</property>
                <property name="column_homogeneous">true</property>
                <property name="hexpand">false</property>
                <property name="vexpand">false</property>
                <property name="row_spacing">6</property>
                <property name="column_spacing">6</property>
                <property name="margin_top">6</property>
                <property name="margin_bottom">6</property>
                <property name="margin_start">6</property>
                <property name="margin_end">6</property>
                <child>
                  <object class="GtkImage">
                    <property name="margin_top">6</property>
                    <property name="margin_bottom">6</property>
                    <property name="icon_name">eraser-symbolic</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">0</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkSeparator">
                    <property name="orientation">vertical</property>
                    <property name="margin_top">0</property>
                    <property name="margin_bottom">20</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">1</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="eraser_widthreset">
                    <layout>
                      <property name="column">0</property>
                      <property name="row">2</property>
                    </layout>
                    <property name="icon_name">reset-pen-symbolic</property>
                    <property name="tooltip_text">reset eraser width</property>
                  </object>
                </child>
                <child>
                  <object class="GtkAdjustment" id="eraser_widthscale_adj">
                    <property name="step-increment">1</property>
                  </object>
                  <object class="GtkSpinButton" id="eraser_spinbutton">
                    <layout>
                      <property name="column">0</property>
                      <property name="row">3</property>
                    </layout>
                    <property name="adjustment">eraser_widthscale_adj</property>
                    <property name="orientation">vertical</property>
                  </object>
                </child>
                <child>
                  <object class="GtkSeparator">
                    <property name="orientation">vertical</property>
                    <property name="margin_top">20</property>
                    <property name="margin_bottom">20</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">4</property>
                    </layout>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>

        <!-- Selector Page -->
        <child>
          <object class="GtkStackPage" id="selector_stackpage">
            <property name="name">selector_page</property>
            <property name="title">Selector</property>
            <property name="child">
              <object class="GtkGrid" id="selector_grid">
                <property name="orientation">vertical</property>
                <property name="width_request">48</property>
                <property name="column_homogeneous">true</property>
                <property name="hexpand">false</property>
                <property name="vexpand">false</property>
                <property name="row_spacing">6</property>
                <property name="column_spacing">6</property>
                <property name="margin_top">6</property>
                <property name="margin_bottom">6</property>
                <property name="margin_start">6</property>
                <property name="margin_end">6</property>
                <child>
                  <object class="GtkImage">
                    <property name="margin_top">6</property>
                    <property name="margin_bottom">6</property>
                    <property name="icon_name">selector-symbolic</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">0</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkSeparator">
                    <property name="orientation">vertical</property>
                    <property name="margin_top">0</property>
                    <property name="margin_bottom">20</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">1</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkButton" id="selector_delete_button">
                    <layout>
                      <property name="column">0</property>
                      <property name="row">2</property>
                    </layout>
                    <property name="margin_top">0</property>
                    <property name="margin_bottom">6</property>
                    <property name="icon_name">edit-delete-symbolic</property>
                    <property name="tooltip_text">delete selection</property>
                    <style>
                      <class name="destructive-action" />
                    </style>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>