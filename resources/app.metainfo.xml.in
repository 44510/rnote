<?xml version="1.0" encoding="UTF-8"?>
<!-- Felix Zwettler 2021 <f.zwettler@posteo.de> -->
<component type="desktop-application">
  <id>@APP_ID@</id>
  <metadata_license>CC0</metadata_license>
  <project_license>GPL-3.0</project_license>
  <name>Rnote</name>
  <launchable type="desktop-id">@APP_ID@.desktop</launchable>
  <summary>Create handwritten notes</summary>

  <categories>
    <category>Gnome</category>
    <category>GTK</category>
    <category>Graphics</category>
  </categories>

  <description>
    <p>Rnote is a simple vector based note taking application for handwritten notes or to annotate documents and pictures.</p>
  </description>

  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/flxzt/rnote/main/resources/screenshots/main_window_dark.png</image>
      <caption>Main window in light colors</caption>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/flxzt/rnote/main/resources/screenshots/main_window_light.png</image>
      <caption>Main window in dark colors</caption>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/flxzt/rnote/main/resources/screenshots/selection.png</image>
      <caption>A selection</caption>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/flxzt/rnote/main/resources/screenshots/multiple_pages.png</image>
      <caption>Multiple pages</caption>
    </screenshot>
  </screenshots>

  <recommends>
    <control>keyboard</control>
    <control>pointing</control>
    <control>touch</control>
  </recommends>

  <url type="homepage">https://github.com/flxzt/rnote</url>
  <url type="bugtracker">https://github.com/flxzt/rnote/issues</url>
  <developer_name>Felix Zwettler</developer_name>
  <update_contact>f.zwettler@posteo.de</update_contact>
  <content_rating type="oars-1.0" />

  <provides>
    <binary>@APP_NAME@</binary>
  </provides>

  <releases>
    <release version="0.1.5" date="2021-10-21">
      <description>
        <p>
          <ul>
            <li>introducing background patterns</li>
            <li>improved zooming</li>
            <li>improved performance</li>
            <li>saving and loading more settings</li>
            <li>UI tweaks</li>
            <li>bug fixes</li>
          </ul>
        </p>
      </description>
    </release>
    <release version="0.1.4" date="2021-10-16">
      <description>
        <p>
          <ul>
            <li>UI improvements: sidebar and settings</li>
            <li>set a background color</li>
            <li>added ellipse as a rough shape</li>
            <li>new and improved gestures and shortcuts (zoom with "ctrl+scroll", drag the canvas with the middle mouse button)</li>
            <li>improved strokes algorithms</li>
            <li>bug fixes</li>
          </ul>
        </p>
      </description>
    </release>
    <release version="0.1.3" date="2021-10-08">
      <description>
        <p>
          <ul>
            <li>Introducing rough shapes for a sketched look</li>
            <li>fill shapes with a color</li>
            <li>improved shape drawing (broke .rnote file backward compatibility, sorry!)</li>
            <li>alpha checkerboard background in the colorpicker</li>
            <li>bug fixes</li>
          </ul>
        </p>
      </description>
    </release>
    <release version="0.1.2" date="2021-10-07">
      <description>
        <p>improved zooming, UI tweaks and bug fixes</p>
      </description>
    </release>
    <release version="0.1.1" date="2021-10-01">
      <description>
        <p>using native filechooser dialogs</p>
      </description>
    </release>
    <release version="0.1.0" date="2021-09-30">
      <description>
        <p>The initial release</p>
      </description>
    </release>
  </releases>

</component>